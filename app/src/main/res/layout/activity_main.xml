<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Auction!"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginStart="50dp" />



            <androidx.appcompat.widget.ActionMenuView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/txtlog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="log in"
                    android:textColor="#0000ff"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/txtRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="Register"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    />
                </LinearLayout>

            </androidx.appcompat.widget.ActionMenuView>




    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="24dp">

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/light_greyy"
            android:queryHint="Search Cartegory"
            android:gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:itemCount="1"/>


            </androidx.cardview.widget.CardView>


        </HorizontalScrollView>



    </LinearLayout>






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@color/bg"
        android:orientation="vertical">






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Cartegories"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="60dp"

            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout

                    android:id="@+id/relative_kitchen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_Kitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="120dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/kitchen" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txtkitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_Kitchen"
                        android:layout_marginStart="46dp"
                        android:gravity="center"
                        android:text="Kitchen"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/txtkitchen"
                        android:layout_marginStart="48dp"
                        android:src="@drawable/rating_orange_big" />


                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/relative_funiture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/relative_kitchen">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_funiture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="120dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/funiture" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txtfuniture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_funiture"
                        android:layout_marginStart="46dp"
                        android:gravity="center"
                        android:text="Furniture"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/txtfuniture"
                        android:layout_marginStart="48dp"
                        android:src="@drawable/rating_orange_big" />


                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/relative_electronics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_funiture"
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="120dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/electronics" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txtelectronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_electronics"
                        android:layout_marginStart="26dp"
                        android:gravity="center"
                        android:text="Electronics"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/txtelectronics"
                        android:layout_marginStart="48dp"
                        android:src="@drawable/rating_orange_big" />


                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/relative_Agriculture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_kitchen"
                    android:layout_toEndOf="@+id/relative_electronics">
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_Agriculture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="120dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:src="@drawable/agricuture" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txtAgriculture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_Agriculture"
                        android:layout_marginStart="36dp"
                        android:gravity="center"
                        android:text="Agriculture"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/txtAgriculture"
                        android:layout_marginStart="48dp"
                        android:src="@drawable/rating_orange_big" />


                </RelativeLayout>




            </RelativeLayout>
        </ScrollView>
















    </LinearLayout>

    </androidx.cardview.widget.CardView>












</LinearLayout>