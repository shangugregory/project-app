<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:background="@color/bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Auction!"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginStart="104dp"/>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="24dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile"/>

            </androidx.cardview.widget.CardView>



        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="24dp">




            <com.android.car.ui.toolbar.SearchView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/light_greyy"
                android:queryHint="Search Cartegory"
                android:gravity="center"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Cartegories"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="60dp"

            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout

                    android:id="@+id/relative_kitchen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_Kitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        app:cardCornerRadius="48dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/kitchen" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txtkitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_Kitchen"
                        android:layout_marginStart="46dp"
                        android:gravity="center"
                        android:text="Kitchen"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/txtkitchen"
                        android:layout_marginStart="48dp"
                        android:src="@drawable/rating_orange_big" />


                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/relative_funiture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/relative_kitchen">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_funiture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        app:cardCornerRadius="48dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/funiture" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txtfuniture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_funiture"
                        android:layout_marginStart="46dp"
                        android:gravity="center"
                        android:text="Furniture"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/txtfuniture"
                        android:layout_marginStart="48dp"
                        android:src="@drawable/rating_orange_big" />


                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/relative_electronics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_funiture"
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        app:cardCornerRadius="48dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/electronics" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txtelectronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_electronics"
                        android:layout_marginStart="26dp"
                        android:gravity="center"
                        android:text="Electronics"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/txtelectronics"
                        android:layout_marginStart="48dp"
                        android:src="@drawable/rating_orange_big" />


                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/relative_Agriculture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_kitchen"
                    android:layout_toEndOf="@+id/relative_electronics">
                    android:layout_margin="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_Agriculture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="48dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/agricuture" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/txtAgriculture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_Agriculture"
                        android:layout_marginStart="36dp"
                        android:gravity="center"
                        android:text="Agriculture"
                        android:textColor="@color/black"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_below="@+id/txtAgriculture"
                        android:layout_marginStart="48dp"
                        android:src="@drawable/rating_orange_big" />


                </RelativeLayout>




            </RelativeLayout>
        </ScrollView>



    </LinearLayout>






</LinearLayout>